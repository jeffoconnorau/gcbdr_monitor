{
  "displayName": "GCBDR Backup Anomaly",
  "documentation": {
    "content": "Anomalies detected in GCBDR Backup jobs. Check the Cloud Run logs for details.",
    "mimeType": "text/markdown"
  },
  "conditions": [
    {
      "displayName": "Anomaly Detected",
      "conditionMatchedLog": {
        "filter": "jsonPayload.event=\"GCBDR_ANOMALY_DETECTED\"",
        "labelExtractors": {
          "anomalies_count": "EXTRACT(jsonPayload.anomalies_count)",
          "anomalies_event": "EXTRACT(jsonPayload.event)",
          "anomalies_summary": "EXTRACT(jsonPayload.summary_text)"
        }
      }
    }
  ],
  "alertStrategy": {
    "notificationRateLimit": {
      "period": "300s"
    }
  },
  "combiner": "OR",
  "enabled": true
}
